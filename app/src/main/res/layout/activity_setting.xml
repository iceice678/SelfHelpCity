<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <include layout="@layout/title_setting" />

    <LinearLayout
        android:id="@+id/modify_pwd"
        style="@style/user_information_list_entry_style"
        app:layout_constraintTop_toBottomOf="@+id/toolbar">

        <TextView
            style="@style/user_information_interface"
            android:text="修改密码" />

        <ImageView
            style="@style/user_information_interface_click_on_the_icon"
            app:srcCompat="@mipmap/ic_me_unold" />
    </LinearLayout>

    <View style="@style/user_information_interface_dividing_line" />

    <LinearLayout

        style="@style/user_information_list_entry_style"
        app:layout_constraintTop_toBottomOf="@+id/toolbar">

        <TextView
            style="@style/user_information_interface"
            android:text="私人设置" />

        <ImageView
            style="@style/user_information_interface_click_on_the_icon"
            app:srcCompat="@mipmap/ic_me_unold" />
    </LinearLayout>

    <View style="@style/user_information_interface_dividing_line" />

    <LinearLayout

        style="@style/user_information_list_entry_style"
        app:layout_constraintTop_toBottomOf="@+id/toolbar">

        <TextView
            style="@style/user_information_interface"
            android:text="私人设置" />

        <ImageView
            style="@style/user_information_interface_click_on_the_icon"
            app:srcCompat="@mipmap/ic_me_unold" />
    </LinearLayout>

    <View style="@style/user_information_interface_dividing_line" />

    <LinearLayout
        android:id="@+id/au_gender_ll"
        style="@style/user_information_list_entry_style"
        app:layout_constraintTop_toBottomOf="@+id/toolbar">

        <TextView
            style="@style/user_information_interface"
            android:text="私人设置" />

        <ImageView
            style="@style/user_information_interface_click_on_the_icon"
            app:srcCompat="@mipmap/ic_me_unold" />
    </LinearLayout>

    <View style="@style/user_information_interface_dividing_line" />

    <TextView
        android:id="@+id/tv_loginout"
        style="@style/style_login_btn"
        android:layout_marginTop="100dp"
        android:background="@drawable/btn_radius_bg"
        android:text="退出登录"
        android:textColor="#ffffff" />
</LinearLayout>