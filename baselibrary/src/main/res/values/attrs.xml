<?xml version="1.0" encoding="utf-8"?>
<resources>

    <declare-styleable name="IconEditText">
        <attr name="editLeftIcon" format="reference|color" />
        <attr name="editRightIcon" format="reference|color" />
        <attr name="hint" format="string" />
        <attr name="text" format="string" />
        <attr name="textColor" format="color" />
        <attr name="textSize" format="dimension" />
        <attr name="leftIconShow" format="boolean" />
        <attr name="rightIconShow" format="boolean" />
        <attr name="maxLength" format="integer" />
        <attr name="frameType" format="string">
            <enum name="none" value="0" />
            <enum name="all" value="1" />
            <enum name="top" value="2" />
            <enum name="bottom" value="3" />
            <enum name="left" value="4" />
            <enum name="right" value="5" />
        </attr>
        <attr name="frameSize" format="dimension" />
        <attr name="frameColor" format="color" />
        <!--<attr name="textBackground" format="reference|color" />-->
        <attr name="inputType">
            <enum name="text" value="1" />
            <enum name="textPassword" value="0x00000080" />
            <enum name="number" value="2" />
            <enum name="phone" value="3" />
        </attr>
    </declare-styleable>

    <declare-styleable name="CustomToolbar">
        <attr name="titleCenter" format="boolean" />
        <attr name="title" format="string" />
        <attr name="titleColor" format="color" />
        <attr name="titleSize" format="integer" />
        <attr name="navigationIcon" format="reference"/>
    </declare-styleable>
</resources>
